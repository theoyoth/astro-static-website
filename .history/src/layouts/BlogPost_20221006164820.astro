---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";

export interface Props {
  title: string;
  description: string;
}

const { title = "theoyoth blog", description = "welcome to my website" } =
  Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style is:global>
      img {
        border-radius: 10px;
        margin-bottom: 10px;
      }
      h1 {
        margin-block: 14px;
        font-size: 2rem;
        text-decoration: underline;
      }
      h2 {
        font-size: 1.1rem;
      }
      h4 {
        font-size: 0.94rem;
        margin-block: 10px;
        text-align: justify;
      }
      p {
        font-size: 1.1rem;
      }
      code {
        background-color: rgb(105, 35, 245);
      }
    </style>
  </head>

  <Body>
    <Header />
    <main class="pt-[65px]">
      <Content>
        <slot />
      </Content>
    </main>
    <Footer />
  </Body>
</html>
